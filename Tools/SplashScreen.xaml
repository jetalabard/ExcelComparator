<Window x:Class="Tools.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        ResizeMode="NoResize"
        xmlns:local="clr-namespace:Tools"
        Background="White"
        Width="200"
        Height="200"
        AllowsTransparency="True"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterScreen"
        WindowState="Normal"
        WindowStyle="None"
        mc:Ignorable="d"
        Title="SplashScreenWindow">
    <Grid Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Image x:Name="back" Grid.RowSpan="3" />
        <TextBlock x:Name="label" Foreground="Black" Grid.Row="1" Margin="4" />
        <ProgressBar x:Name="progress" BorderBrush="Transparent" BorderThickness="3" Grid.Row="2" IsIndeterminate="True" Maximum="100" />
    </Grid>
</Window>
